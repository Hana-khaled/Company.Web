@model IEnumerable<Department>

<html>
    <head>
        <title>Index</title>
    </head>
    <body>
        <a asp-asp-controller="Department" asp-action="Create" class="btn btn-primary">Create new Department</a>
        @if (Model.Count() > 0)
        {
            <table class="table-stripped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(D => D.Code)</th>
                        <th>@Html.DisplayNameFor(D => D.Name)</th>
                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var department in Model)
                    {
                        <tr>@department.Code</tr>
                        <tr>@department.Name</tr>

                    <td>
                        <a asp-action="Details" asp-router-id?="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"> Details</i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-router-id?="@department.Id" class="btn btn-success">
                            <i class="fas fa-eye"> Update</i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-router-id?="@department.Id" class="btn btn-danger">
                            <i class="fas fa-eye"> Delete</i>
                        </a>
                    </td>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="mt-5 alert alert-warning">
                <h3>There is no department</h3>
            </div>

        }
    </body>
</html>